<h1>To-Do List</h1>

<form id= "item-form">
  <input type="text" name="" placeholder="add a new to-do item" id="item-text">
  <input type="submit" value="add item" id="item-submit">
</form>

<div class="row">
  <div class="col-md-6">
    <h3>unfinished items</h3>
    <table class="table table-striped list" id="unfinished-items">
      <tr>
        <th id="sort-unfinished-by-name"><a class="btn" data-id="1" data-type="name">item</a></th>
        <th id="sort-unfinished-by-created-at"><a class="btn" data-sort="created-at">created at</a></th>
        <th><a class="btn">completed at</a></th>
      </tr>
    </table>
  </div>

  <div class="col-md-6">
    <h3>finished items</h3>
    <table class="table table-striped list" id="finished-items">
      <tr>
        <th id="sort-finished-by-name"><a class="btn">item</a></th>
        <th id="sort-finished-by-created-at"><a class="btn">created at</a></th>
        <th id="sort-finished-by-completed-at"><a class="btn">completed at</a></th>
      </tr>
    </table>
  </div>
</div>
